{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block content %}
	<main class="container col-6">
		<h1 class="tweets-from my-4">
			Log into your account
		</h1>
		{% if login is not empty %}
			<div id="loginHelpBlock" class="alert alert-warning mb-4">
				There's no
				<span class="fw-bolder">{{ login }}</span>
				on Mars. Be free to sign up !
			</div>
		{% endif %}
		<ul class="alert alert-danger list-unstyled empty">
			{%- for error in errors -%}
				<li>{{ error }}</li>
			{%- endfor -%}
		</ul>
		<form method="POST" class="my-3 login-form" novalidate>
			<fieldset>
				<div class="mb-3 input">
					<input type="text" class="mt-3 px-3 form-control login-input" id="login" name="login" aria-describedby="loginHelpBlock" placeholder="Username" required>
				</div>
				<div class="d-flex justify-content-center">
					<button class="mb-3 button">Log in</button>
					<a class="mx-2 mb-3 button" href="/home/index">Back</a>
				</div>
			</fieldset>
		</form>
	</main>
{% endblock %}
