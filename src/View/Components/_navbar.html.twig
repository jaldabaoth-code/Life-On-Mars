{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/navbar.css">
{% endblock %}

{% block navbar %}
	<nav class="navbar navbar-expand-lg navbar-dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">MARS SOCIAL</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
				<ul class="nav navbar-nav">
					<li class="nav-item me-2">
						<form class="search-form d-flex py-1 px-1" method="post" action="/home/show/">
							<input class="form-control" type="search" placeholder="Search" name="username" aria-label="Search">
							<button class="btn btn-search" type="submit">
								<i class="fas fa-search"></i>
							</button>
						</form>
					</li>
					<li class="nav-item me-2 ms-2 d-flex align-items-center">
						{% if SESSION is empty %}
							<a class="nav-link active" href="/login/connection">Log in
								<i class="fas fa-user ms-1"></i>
							</a>
						{% else %}
							<p class="username-nav mb-0 ms-1 me-2">Logged as <span class="fw-bolder">{{ SESSION.login }}</span></p>
							<img class="pic-nav me-2 rounded-circle" src="/../uploads/{{ SESSION.profile_picture }}" alt="profile-picture">

							<a class="nav-link active" href="/login/disconnection">Log out
								<i class="fas fa-sign-out-alt ms-1"></i>
							</a>
						{% endif %}
					</li>
				</ul>
			</div>
		</div>
	</nav>
{% endblock %}
